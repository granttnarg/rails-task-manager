<h1>Make a new Task</h1>

<%= form_for @task do |f| %>
<%= f.label :name %>
<%= f.text_field :title %>
<%= f.label :details %>
<%= f.text_field :details %>
<%= f.label :completed %>
<%= f.check_box :completed, {}, true, false %>
<%= f.submit "Update" %>
<% end %>

<p><%= link_to "Back to List", tasks_path  %></p>
